<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/filterView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_sheet"
    tools:context=".FilterFragment">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide_peek_height"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="48dp" />

    <ImageButton
        android:id="@+id/clearImageButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="8dp"
        android:background="?selectableItemBackgroundBorderless"
        android:scaleType="center"
        android:tint="@color/primaryText"
        app:layout_constraintBottom_toTopOf="@id/guide_peek_height"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_cancel"
        tools:visibility="gone" />

    <View
        android:id="@+id/expandView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/guide_peek_height"
        app:layout_constraintEnd_toStartOf="@id/clearImageButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/resetButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|start"
        android:minWidth="0dp"
        android:paddingHorizontal="16dp"
        android:paddingVertical="0dp"
        android:text="@string/reset"
        app:layout_constraintBottom_toTopOf="@id/guide_peek_height"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:targetApi="o"
        tools:visibility="visible" />

    <ImageButton
        android:id="@+id/collapseImageButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="8dp"
        android:background="?selectableItemBackgroundBorderless"
        android:scaleType="center"
        android:tint="@color/primaryText"
        app:layout_constraintBottom_toTopOf="@id/guide_peek_height"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_keyboard_arrow_down" />

</androidx.constraintlayout.widget.ConstraintLayout>